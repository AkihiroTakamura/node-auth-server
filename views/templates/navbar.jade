nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      btn.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#')!=__('app.name')

    #navbar-collapse.navbar-collapse.collapse
      ul.nav.navbar-nav
        li
          a.nav-link(data-href='home') Home

      ul.nav.navbar-nav.navbar-right
        if user
          li.dropdown
            a.dropdown-toggle(data-toggle='dropdown', area-expanded='false') !{user.fullName + '<span class="caret"></span>'}
            ul.dropdown-menu
              li
                a(href='/logout') #{__('dsp.control.logout')}
        else
          li
            a(href='/login') #{__('dsp.control.login')}

