{
  "server": {
    "port": 8080
  },
  "session": {
    "secret": "Super Secret Session Key",
    "expiresInDate": 14
  },
  "database": {
    "mongo": "mongodb://localhost/nodeauthserver"
  },
  "token": {
    "expiresIn": 3600
  },
  "scope": {
    "map": {
      "read": "execute view api",
      "write": "execute write api"
    }
  },
  // log4js see https://github.com/nomiddlename/log4js-node/wiki/Appenders
  "log4js": {
    "level": "INFO",  //INFO以上を出力
    "configure": {
      "appenders": [
        {
          "category": "system",
          "type": "dateFile",
          "filename": "logs/system.log",
          "pattern": "-yyyy-MM-dd",
          "alwaysIncludePattern": false,
          "backups": 10
        },
        {
          "category": "access",
          "type": "dateFile",
          "filename": "logs/access.log",
          "pattern": "-yyyy-MM-dd",
          "alwaysIncludePattern": false,
          "backups": 10
        },
        {
          "category": "error",
          "type": "dateFile",
          "filename": "logs/error.log",
          "pattern": "-yyyy-MM-dd",
          "alwaysIncludePattern": false,
          "backups": 10
        },
        {
          "type": "console"
        }
      ],
      "replaceConsole": true
    }
  }
}
