{
  "server": {
    "port": 9999
  },
  "session": {
    "secret": "Super Secret Session Key",
    "expiresInDate": 14
  },
  "database": {
    "mongo": "mongodb://localhost/nodeauthserver"
  },
  "token": {
    "expiresIn": 3600
  },
  "scope": {
    "map": {
      "admin": "administrator role",
      "read": "execute view api",
      "write": "execute write api"
    }
  },
  // log4js see https://github.com/nomiddlename/log4js-node/wiki/Appenders
  "log4js": {
    "level": "ALL",
    "configure": {
      "appenders": [
        {
          "category": "system",
          "type": "console"
        },
        {
          "category": "access",
          "type": "console"
        },
        {
          "category": "error",
          "type": "console"
        }
      ],
      "replaceConsole": true
    }
  },
  "application": {
    "init": {
      "admin": {
        "username": "admin",
        "password": "admin"
      }
    }
  }
}
